@page "{userId:int?}"
@model EditAdministracionModel
@{
}

<h1>Editar Usuario</h1>

<form method="post">
    <input type="hidden" asp-for="Usuarios.Id"/>
    <div class="form-group">
        <label for="Usuarios.Nombre">Nombre</label>
        <input required type="text" class="form-control" id="nombre" asp-for="Usuarios.Nombre" placeholder="Nombre">
    </div>
    <div class="form-group">
        <label for="Usuarios.Apellido">Apellido</label>
        <input required type="text" class="form-control" asp-for="Usuarios.Apellido" id="apellido" placeholder="Apellido">
    </div>
    <div class="form-group">
        <label for="Usuarios.Correo">Correo Electronico</label>
        <input required type="email" class="form-control" asp-for="Usuarios.Correo" id="email" placeholder="Correo Electronio">
    </div>
    <div class="form-group">
        <label for="Usuarios.Contrasena">Contrasena</label>
        <input required  class="form-control" asp-for="Usuarios.Contrasena" placeholder="Contrasena">
    </div>
    <div class="form-group">
        <label for="Usuarios.Rol">Rol</label>
        <select required class="form-control" asp-items="Model.Rol" asp-for="Usuarios.Rol"></select>
    </div>
    <div class="form-group">
        <label for="Usuarios.Estado">Estado</label>
        <select required class="form-control" asp-items="Model.Estado" asp-for="Usuarios.Estado" ></select>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>